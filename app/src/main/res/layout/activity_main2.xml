<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="#748d69">

    <TextView
        android:id="@+id/welcomeToGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hangman"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textColor="#0c2a31"
        android:textSize="35sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50sp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/refresher"
        android:text="Instructions"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#0c2a31"
        android:textSize="20sp"
        android:textStyle="bold"
        android:backgroundTint="#cfdae4"
        android:layout_marginBottom="25sp"
        />



    <RelativeLayout
        android:id="@+id/all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeToGame"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/stand"
            android:paddingTop="0dp"
            android:src="@drawable/stand" />

        <ImageView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/head"
            android:paddingTop="0dp"
            android:src="@drawable/head" />

    <ImageView
        android:id="@+id/body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/body"
        android:paddingTop="0dp"
        android:src="@drawable/body" />
    <ImageView
        android:id="@+id/armr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/armr"
        android:paddingTop="0dp"
        android:src="@drawable/armr" />
    <ImageView
        android:id="@+id/arml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/arml"
        android:paddingTop="0dp"
        android:src="@drawable/arml" />
        <ImageView
            android:id="@+id/legr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/legr"
            android:paddingTop="0dp"
            android:src="@drawable/legr" />
        <ImageView
            android:id="@+id/legl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/legl"
            android:paddingTop="0dp"
            android:src="@drawable/legl" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/answerDisp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="#eeeeee"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="20sp"
        android:layout_below="@id/all"
        android:layout_marginHorizontal="20sp">
    </LinearLayout>


</RelativeLayout>